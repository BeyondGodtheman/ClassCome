<resources>

    <!--子条目布局样式 -文字-文字-更多图标-->
    <style name="style_item_layout_txt_txt_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90pt</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">40pt</item>
        <item name="android:paddingEnd">40pt</item>
    </style>


    <!--公用按钮样式-蓝底白字-->
    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90pt</item>
        <item name="android:layout_marginStart">44pt</item>
        <item name="android:layout_marginEnd">44pt</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/draw_bg_fillet_blue</item>
        <item name="android:textSize">36pt</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <!--公用按钮样式-蓝底白字-无边距-->
    <style name="style_button_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90pt</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:textSize">36pt</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <!--白底蓝字蓝框-->
    <style name="style_btn_border_blue" parent="style_button">
        <item name="android:background">@drawable/draw_bg_fillet_blue_border</item>
        <item name="android:textColor">@color/color_nav_blue</item>
    </style>


    <!--小按钮 - 白底蓝字蓝框-->
    <style name="style_small_btn_border_blue">
        <item name="android:layout_width">164pt</item>
        <item name="android:layout_height">58pt</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_nav_blue</item>
        <item name="android:background">@drawable/draw_bg_fillet_blue_border</item>
    </style>

    <!--小按钮 - 白底灰字灰框-->
    <style name="style_small_btn_border_gray">
        <item name="android:layout_width">164pt</item>
        <item name="android:layout_height">58pt</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_nav_gray</item>
        <item name="android:background">@drawable/draw_bg_fillet_gray_border</item>
    </style>

    <!--字体样式-->
    <style name="style_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_default_font</item>
    </style>

    <style name="style_font_white_24pt" parent="style_font">
        <item name="android:textSize">24pt</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="style_font_white_26pt" parent="style_font">
        <item name="android:textSize">26pt</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="style_font_white_30pt" parent="style_font">
        <item name="android:textSize">30pt</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="style_font_white_36pt" parent="style_font">
        <item name="android:textSize">36pt</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="style_font_gray_24pt" parent="style_font">
        <item name="android:textSize">24pt</item>
        <item name="android:textColor">@color/color_gray_font</item>
    </style>

    <style name="style_font_gray_28pt" parent="style_font">
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_gray_font</item>
    </style>

    <style name="style_font_gray_28pt_60pt" parent="style_font">
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_gray_font</item>
        <item name="android:layout_marginStart">60pt</item>
        <item name="android:layout_marginTop">40pt</item>
    </style>

    <style name="style_font_gray_30pt" parent="style_font">
        <item name="android:textSize">30pt</item>
        <item name="android:textColor">@color/color_gray_font</item>
    </style>

    <style name="style_font_default_22pt" parent="style_font">
        <item name="android:textSize">22pt</item>
    </style>

    <style name="style_font_default_24pt" parent="style_font">
        <item name="android:textSize">24pt</item>
    </style>

    <style name="style_font_default_26pt" parent="style_font">
        <item name="android:textSize">26pt</item>
    </style>

    <style name="style_font_default_28pt" parent="style_font">
        <item name="android:textSize">28pt</item>
    </style>

    <style name="style_font_default_30pt" parent="style_font">
        <item name="android:textSize">30pt</item>
    </style>

    <style name="style_font_default_32pt" parent="style_font">
        <item name="android:textSize">32pt</item>
    </style>

    <style name="style_font_default_34pt" parent="style_font">
        <item name="android:textSize">34pt</item>
    </style>

    <style name="style_font_default_32pt_40pt" parent="style_font">
        <item name="android:textSize">32pt</item>
        <item name="android:layout_marginStart">40pt</item>
    </style>

    <style name="style_font_default_36pt" parent="style_font">
        <item name="android:textSize">36pt</item>
    </style>


    <!-- 分割块样式 -->
    <style name="style_more_btn">
        <item name="android:layout_width">20pt</item>
        <item name="android:layout_height">25pt</item>
        <item name="android:src">@mipmap/ic_more</item>
        <item name="android:layout_marginEnd">32pt</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- 分割块样式 -->
    <style name="style_view_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20pt</item>
        <item name="android:background">@color/color_base_bg</item>
    </style>

    <!-- 分割竖线样式 -->
    <style name="style_view_vertical_line">
        <item name="android:layout_width">6pt</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <!-- 分割横线样式 -->
    <style name="style_view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2pt</item>
        <item name="android:background">@color/color_divider</item>
    </style>


    <!-- 发布-分割横线-top-start -->
    <style name="style_view_line_publish">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2pt</item>
        <item name="android:layout_marginTop">20pt</item>
        <item name="android:layout_marginStart">60pt</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <!-- 分割横线-top-->
    <style name="style_view_line_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2pt</item>
        <item name="android:layout_marginTop">20pt</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <!--发布-输入框字体样式-->
    <style name="style_edit_publish" parent="style_font">
        <item name="android:textSize">28pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">60pt</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="style_edit_modify" parent="style_font">
        <item name="android:textSize">28pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <!-- 个人中心-子条目-上侧自定义图标 -->
    <style name="style_item_text_top_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_default_font</item>
    </style>

    <style name="style_item_layout_top_icon">
        <item name="android:layout_width">0pt</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- 子条目-公用样式 img-txt-txt-img -->
    <style name="style_mine_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">98pt</item>
    </style>


    <!--底部导航栏-->
    <style name="style_home_nav_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20pt</item>
        <item name="android:textColor">@color/color_nav_gray</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/color_default_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--style_title-->
    <style name="style_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">98pt</item>
    </style>


    <style name="ClassListNavText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_default_font</item>
    </style>

    <!--默认输入框样式-->
    <style name="EditDefaultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
    </style>


    <style name="TextAppearance.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">32pt</item>
        <item name="android:textColor">@color/color_gray_font</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="publishClassText">
        <item name="android:textSize">28pt</item>
        <item name="android:textColor">@color/color_gray_font</item>
        <item name="android:layout_width">200pt</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20pt</item>
        <item name="android:paddingTop">35pt</item>
        <item name="android:paddingStart">60pt</item>
    </style>

    <style name="publishClassEdit" parent="publishClassText">
        <item name="android:textSize">28pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_default_font</item>
        <item name="android:background">@color/color_transparent</item>
    </style>


    <style name="publish_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2pt</item>
        <item name="android:layout_marginStart">60pt</item>
        <item name="android:background">@color/color_divider</item>
    </style>


    <style name="GuideTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
