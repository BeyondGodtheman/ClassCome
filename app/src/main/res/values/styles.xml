<resources>

    <!--底部导航栏-->

    <style name="Style_Home_Bottom_Navigation">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_5</item>
        <item name="android:drawablePadding">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/dimen_text_10</item>
        <item name="android:textColor">@drawable/selector_home_tab_text_color</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Title-->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">93dp</item>
    </style>

</resources>
