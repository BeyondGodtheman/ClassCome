<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="130pt"
        android:layout_height="130pt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27pt">
    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/color_divider"
        android:scaleType="centerCrop"/>


     <RelativeLayout
         android:id="@+id/view_delete"
         android:layout_width="42pt"
         android:layout_height="42pt"
         android:layout_marginEnd="9pt"
         android:layout_marginBottom="7pt"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true">
         <View
             android:layout_width="25pt"
             android:layout_height="25pt"
             android:background="@color/color_white"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@mipmap/ic_info_delete"/>
     </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>