<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115pt"
        android:layout_marginTop="14pt">

        <TextView
            style="@style/style_font"
            android:layout_width="match_parent"
            android:layout_marginStart="45pt"
            android:text="@string/reg_phone"
            android:textSize="34pt"
            android:layout_alignParentBottom="true"/>

        <EditText
            android:id="@+id/edit_phone"
            style="@style/EditDefaultStyle"
            android:layout_width="match_parent"
            android:layout_marginStart="222pt"
            android:layout_marginEnd="44pt"
            android:hint="@string/reg_hint_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="28pt"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginStart="44pt"
        android:layout_marginTop="9pt"
        android:layout_marginEnd="44pt"
        android:background="@color/color_divider" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118pt">

        <TextView
            style="@style/style_font"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45pt"
            android:text="@string/code"
            android:textSize="34pt" />

        <EditText
            android:id="@+id/edit_code"
            style="@style/EditDefaultStyle"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="222pt"
            android:layout_marginEnd="44pt"
            android:hint="@string/reg_hint_code"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1"
            android:textSize="28pt"
            tools:ignore="Autofill" />

        <com.sunny.classcome.widget.button.TimerButton
            android:id="@+id/txt_code"
            android:layout_width="164pt"
            android:layout_height="60pt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="64pt"
            android:background="@drawable/draw_bg_fillet_blue"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="@color/color_white"
            android:textSize="28pt" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginStart="44pt"
        android:layout_marginTop="9pt"
        android:layout_marginEnd="44pt"
        android:background="@color/color_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115pt">

        <TextView
            style="@style/style_font"
            android:layout_marginStart="45pt"
            android:text="@string/new_pass"
            android:textSize="34pt"
            android:layout_alignParentBottom="true"/>

        <EditText
            android:id="@+id/edit_new_pass"
            style="@style/EditDefaultStyle"
            android:layout_width="match_parent"
            android:layout_marginStart="222pt"
            android:layout_marginEnd="44pt"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/reg_hint_pass"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:textSize="28pt"
            tools:ignore="Autofill"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginStart="44pt"
        android:layout_marginTop="9pt"
        android:layout_marginEnd="44pt"
        android:background="@color/color_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115pt">

        <TextView
            style="@style/style_font"
            android:layout_marginStart="45pt"
            android:text="@string/sure_pass"
            android:textSize="34pt"
            android:layout_alignParentBottom="true"/>

        <EditText
            android:id="@+id/edit_sure_pass"
            style="@style/EditDefaultStyle"
            android:layout_width="match_parent"
            android:layout_marginStart="222pt"
            android:layout_marginEnd="44pt"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/sure_pass_desc"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:textSize="28pt"
            tools:ignore="Autofill"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginStart="44pt"
        android:layout_marginTop="9pt"
        android:layout_marginEnd="44pt"
        android:background="@color/color_divider" />


    <Button
        android:id="@+id/btn_complete"
        style="@style/style_button"
        android:layout_marginStart="44pt"
        android:layout_marginTop="100pt"
        android:layout_marginEnd="44pt"
        android:text="@string/complete" />
</LinearLayout>