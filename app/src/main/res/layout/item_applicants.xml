<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15pt"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81pt">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="47pt"
            android:textColor="@color/color_price_red"
            android:textSize="26pt"
            tools:text="已中标" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@drawable/dashed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_user_head"
            android:layout_width="169pt"
            android:layout_height="169pt"
            android:layout_marginStart="48pt"
            android:layout_marginTop="23pt"
            android:layout_marginBottom="23pt"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_default_head"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/txt_name"
            style="@style/style_font_default_30pt"
            android:layout_marginStart="26pt"
            android:layout_marginTop="48pt"
            android:layout_toStartOf="@id/view_more"
            android:layout_toEndOf="@id/img_user_head"
            android:lines="2"
            tools:text="XXX对您的课程发起了应聘" />

        <View
            android:id="@+id/view_more"
            android:layout_width="21pt"
            android:layout_height="35pt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50pt"
            android:layout_marginEnd="41pt"
            android:background="@mipmap/ic_more" />

        <TextView
            android:id="@+id/txt_time"
            style="@style/style_font_gray_24pt"
            android:layout_below="@id/txt_name"
            android:layout_marginStart="26pt"
            android:layout_marginTop="16pt"
            android:layout_toEndOf="@id/img_user_head"
            tools:text="2018-02-02 13:12:33" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@drawable/dashed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89pt">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="164pt"
            android:layout_height="58pt"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16pt"
            android:layout_toStartOf="@id/btn_right"
            android:background="@drawable/draw_bg_fillet_blue_border"
            android:text="@string/candidate"
            android:textColor="@color/color_nav_blue"
            android:textSize="28pt" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="164pt"
            android:layout_height="58pt"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="47pt"
            android:background="@drawable/draw_bg_fillet_blue_border"
            android:text="@string/winning_bid"
            android:textColor="@color/color_nav_blue"
            android:textSize="28pt" />

    </RelativeLayout>
</LinearLayout>