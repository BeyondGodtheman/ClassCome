<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/txt_msg_type"
                style="@style/style_font_default_32sp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="27dp"
                android:textStyle="bold"
                tools:text="系统提示" />

            <TextView
                android:id="@+id/txt_msg_time"
                style="@style/style_font_default_22sp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="27dp"
                tools:text="2018/02/02  13:12:33" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_msg_title"
                style="@style/style_font_default_28sp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                tools:text="[米斯特教育]邀请您来参加课程竞标，快来看看" />

            <TextView
                android:id="@+id/txt_msg_desc"
                style="@style/style_font_default_28sp"
                android:layout_below="@id/txt_msg_title"
                android:layout_marginStart="45dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="100dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="初中英语班课教研员-要求有专业教学资质" />

            <View
                android:layout_width="22dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="28dp"
                android:background="@mipmap/ic_more" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>