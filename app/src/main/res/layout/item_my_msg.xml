<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="265pt"
    android:layout_marginStart="25pt"
    android:layout_marginEnd="25pt"
    android:orientation="vertical"
    app:cardCornerRadius="8pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80pt">

            <TextView
                android:id="@+id/txt_msg_type"
                style="@style/style_font_default_32pt"
                android:layout_marginStart="45pt"
                android:layout_marginTop="27pt"
                android:textStyle="bold"
                tools:text="系统提示" />

            <TextView
                android:id="@+id/txt_msg_time"
                style="@style/style_font_default_22pt"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33pt"
                android:layout_marginEnd="27pt"
                tools:text="2018/02/02  13:12:33" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_msg_title"
                style="@style/style_font_default_28pt"
                android:layout_marginStart="45pt"
                android:layout_marginTop="16pt"
                android:layout_marginEnd="100pt"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                tools:text="[米斯特教育]邀请您来参加课程竞标，快来看看" />

            <TextView
                android:id="@+id/txt_msg_desc"
                style="@style/style_font_default_28pt"
                android:layout_below="@id/txt_msg_title"
                android:layout_marginStart="45pt"
                android:layout_marginTop="27pt"
                android:layout_marginEnd="100pt"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="初中英语班课教研员-要求有专业教学资质" />

            <View
                android:layout_width="22pt"
                android:layout_height="36pt"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14pt"
                android:layout_marginEnd="28pt"
                android:background="@mipmap/ic_more" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>