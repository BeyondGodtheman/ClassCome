<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_marginBottom="42dp"
                android:background="@drawable/draw_bg_fillet_white">

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:layout_toStartOf="@id/img_icon"
        android:gravity="start"
        android:textColor="@color/color_default_font"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="@string/publish_train"/>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_type"
        android:layout_alignStart="@id/txt_type"
        android:layout_marginTop="22dp"
        android:textColor="@color/color_gray_font"
        android:textSize="24sp"
        tools:text="@string/publish_train_prompt"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="64dp"
        android:contentDescription="@string/app"
        tools:src="@mipmap/ic_publish_tutor"/>

</RelativeLayout>
