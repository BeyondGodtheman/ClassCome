<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248pt"
            android:background="@color/color_primary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30pt"
                android:layout_marginTop="16pt"
                android:layout_marginBottom="40pt"
                android:text="@string/publish"
                android:textColor="@color/color_white"
                android:textSize="36pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50pt"
                android:text="@string/publish_choice"
                android:textColor="@color/color_white"
                android:textSize="24pt"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recl_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="44pt"
            android:layout_marginTop="160pt"
            android:layout_marginEnd="44pt"/>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>