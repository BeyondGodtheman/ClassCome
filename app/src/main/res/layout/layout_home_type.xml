<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250pt"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_314"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOne"
                style="@style/style_font_default_32pt"
                android:layout_marginStart="30pt"
                android:layout_marginTop="13pt"
                android:text="@string/train"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOne"
                android:layout_marginStart="30pt"
                android:text="@string/train_info"
                android:textColor="@color/color_gray_font"
                android:textSize="23pt"/>

            <ImageView
                android:layout_width="215pt"
                android:layout_height="125pt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="40pt"
                android:layout_marginBottom="20pt"
                android:src="@mipmap/bg_home_train"/>
        </RelativeLayout>

        <View
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:background="@color/color_divider"/>

        <RelativeLayout
            android:id="@+id/rl_311"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTwo"
                style="@style/style_font_default_32pt"
                android:layout_marginStart="30pt"
                android:layout_marginTop="13pt"
                android:text="@string/field"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTwo"
                android:layout_marginStart="30pt"
                android:text="@string/field_info"
                android:textColor="@color/color_gray_font"
                android:textSize="23pt"/>

            <ImageView
                android:layout_width="261pt"
                android:layout_height="174pt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20pt"
                android:src="@mipmap/bg_home_field"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/color_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250pt"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_class"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvThree"
                style="@style/style_font_default_32pt"
                android:layout_marginStart="30pt"
                android:layout_marginTop="13pt"
                android:text="@string/substitute"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvThree"
                android:layout_marginStart="30pt"
                android:text="@string/substitute_info"
                android:textColor="@color/color_gray_font"
                android:textSize="23pt"/>

            <ImageView
                android:layout_width="180pt"
                android:layout_height="134pt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="40pt"
                android:layout_marginBottom="20pt"
                android:src="@mipmap/bg_home_substitute"/>
        </RelativeLayout>

        <View
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:background="@color/color_divider"/>

        <RelativeLayout
            android:id="@+id/rl_217"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFour"
                style="@style/style_font_default_32pt"
                android:layout_marginStart="30pt"
                android:layout_marginTop="13pt"
                android:text="@string/tutor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFour"
                android:layout_marginStart="30pt"
                android:text="@string/tutor_info"
                android:textColor="@color/color_gray_font"
                android:textSize="23pt"/>

            <ImageView
                android:layout_width="104pt"
                android:layout_height="118pt"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="60pt"
                android:layout_marginBottom="20pt"
                android:src="@mipmap/bg_home_tutor"/>
        </RelativeLayout>

        <View
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:background="@color/color_divider"/>

        <RelativeLayout
            android:id="@+id/rl_213"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFive"
                style="@style/style_font_default_32pt"
                android:layout_marginStart="30pt"
                android:layout_marginTop="13pt"
                android:text="@string/active"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFive"
                android:layout_marginStart="30pt"
                android:text="@string/active_info"
                android:textColor="@color/color_gray_font"
                android:textSize="23pt"/>

            <ImageView
                android:layout_width="122pt"
                android:layout_height="100pt"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30pt"
                android:layout_marginBottom="20pt"
                android:src="@mipmap/bg_home_active"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/color_divider"/>
</LinearLayout>