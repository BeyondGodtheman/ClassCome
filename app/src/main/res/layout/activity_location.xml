<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146pt"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <View
            android:layout_width="23pt"
            android:layout_height="30pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="70pt"
            android:background="@mipmap/ic_location_blue" />

        <TextView
            android:id="@+id/txt_location_name"
            style="@style/style_font_default_32pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12pt"
            android:text="@string/defaultLocation" />

        <TextView
            style="@style/style_font_default_24pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24pt"
            android:text="@string/gps_location_city"
            android:textColor="@color/color_gray_font" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:layout_marginTop="15pt"
        android:background="@color/color_white">

        <TextView
            style="@style/style_font_default_28pt"
            android:layout_marginStart="70pt"
            android:layout_marginTop="20pt"
            android:text="@string/open_city" />

        <TextView
            style="@style/style_font_default_32pt"
            android:layout_marginStart="190pt"
            android:layout_marginTop="80pt"
            android:text="@string/defaultLocation" />

        <TextView
            style="@style/style_font_default_24pt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="69pt"
            android:layout_marginEnd="50pt"
            android:text="@string/location_desc"
            android:textColor="@color/color_gray_font" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recl_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="14pt"
        android:background="@color/color_white" />
</LinearLayout>