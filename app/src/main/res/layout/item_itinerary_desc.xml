<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100pt"
    android:layout_marginTop="40pt"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_time"
        style="@style/style_font_default_24pt"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20pt"
        android:layout_marginEnd="20pt"
        android:text="10:00" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19pt"
            android:background="@color/color_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="28pt"
            android:background="@drawable/draw_bg_fillet_gray">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_photo"
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="22pt"
                android:src="@drawable/bg_default_photo"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/txt_title"
                style="@style/style_font_default_30pt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20pt"
                android:layout_marginEnd="20pt"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/app" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>