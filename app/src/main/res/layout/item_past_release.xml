<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320pt"
    android:layout_height="326pt"
    android:layout_marginTop="44pt"
    app:cardCornerRadius="8pt">

    <ImageView
        android:id="@+id/img_class_photo"
        android:layout_width="match_parent"
        android:layout_height="237pt"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_default_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89pt"
        android:layout_marginTop="237pt"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_class_name"
            style="@style/style_font_default_24pt"
            android:layout_marginStart="15pt"
            android:layout_marginTop="6pt"
            android:layout_marginEnd="17pt"
            android:ellipsize="end"
            android:lines="1"
            tools:text="初中英语班课教研员要求" />

        <TextView
            android:id="@+id/txt_money"
            style="@style/style_font_default_28pt"
            android:layout_marginStart="16pt"
            android:layout_marginTop="4pt"
            android:layout_marginEnd="17pt"
            android:ellipsize="end"
            android:lines="1"
            android:text="¥0"
            android:textColor="@color/color_price_red" />


    </LinearLayout>
</android.support.v7.widget.CardView>