<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134pt">

        <TextView
            style="@style/style_font"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45pt"
            android:text="@string/phone"
            android:textSize="34pt" />

        <EditText
            android:id="@+id/edit_login_phone"
            style="@style/EditDefaultStyle"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="222pt"
            android:layout_marginEnd="44pt"
            android:hint="@string/reg_hint_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="28pt" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginStart="44pt"
        android:layout_marginTop="9pt"
        android:layout_marginEnd="44pt"
        android:background="@color/color_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115pt">

        <TextView
            style="@style/style_font"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45pt"
            android:text="@string/password"
            android:textSize="34pt" />

        <EditText
            android:id="@+id/edit_login_pass"
            style="@style/EditDefaultStyle"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="222pt"
            android:layout_marginEnd="44pt"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/login_pass_hint"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:textSize="28pt"
            tools:ignore="Autofill" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginStart="44pt"
        android:layout_marginTop="9pt"
        android:layout_marginEnd="44pt"
        android:background="@color/color_divider" />

    <TextView
        android:id="@+id/txt_forget_pass"
        style="@style/style_font_default_28pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="575pt"
        android:paddingTop="@dimen/pt22"
        android:paddingBottom="@dimen/pt22"
        android:text="@string/forget_pass"
        android:textColor="@color/color_gray_font" />

    <Button
        android:id="@+id/btn_login"
        style="@style/style_button"
        android:layout_marginTop="17pt"
        android:text="@string/login" />

    <TextView
        android:id="@+id/txt_pass_login"
        style="@style/style_font_default_30pt"
        android:layout_gravity="center_horizontal"
        android:paddingTop="36pt"
        android:paddingBottom="36pt"
        android:text="@string/fast_login"
        android:textColor="@color/color_nav_blue" />
</LinearLayout>