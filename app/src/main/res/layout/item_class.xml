<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330pt"
    android:layout_marginBottom="10pt"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_class_photo"
            android:layout_width="230pt"
            android:layout_height="206pt"
            android:layout_marginStart="23pt"
            android:layout_marginTop="33pt"
            android:layout_marginEnd="23pt"
            android:contentDescription="@string/app"
            android:scaleType="fitXY"
            app:riv_corner_radius="10pt"
            android:src="@drawable/bg_default_photo" />

        <TextView
            android:id="@+id/text_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33pt"
            android:layout_marginEnd="13pt"
            android:layout_toEndOf="@id/img_class_photo"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/color_default_font"
            android:textSize="32pt"
            tool:text="初中英语班课教研员-要求有专业教学资质" />

        <TextView
            android:id="@+id/text_class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_class_name"
            android:layout_marginTop="58pt"
            android:layout_toEndOf="@id/img_class_photo"
            android:textColor="@color/color_gray_font"
            android:textSize="24pt"
            tool:text="周一至周三 18:00-20:00" />


        <TextView
            android:id="@+id/text_class_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="139pt"
            android:layout_marginEnd="25pt"
            android:textColor="@color/color_price_red"
            android:textSize="36pt"
            tool:text="¥4000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_below="@id/text_class_time"
            android:layout_marginTop="14pt"
            android:layout_toEndOf="@id/img_class_photo"
            android:background="@color/color_divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10pt">

        <LinearLayout
            android:layout_width="262pt"
            android:layout_height="match_parent"
            android:layout_marginTop="20pt"
            android:orientation="horizontal">

            <View
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginStart="51pt"
                android:background="@mipmap/ic_thumbtack_blue" />

            <TextView
                android:id="@+id/text_class_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9pt"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_default_font"
                android:textSize="24pt"
                tool:text="拉丁舞" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="304pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="12pt">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_user_name"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_default_head"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/text_class_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16pt"
                android:layout_marginTop="8pt"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_gray_font"
                android:textSize="24pt"
                tool:text="米斯特教育" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt">

            <View
                android:layout_width="22pt"
                android:layout_height="28pt"
                android:background="@mipmap/ic_home_location" />

            <TextView
                android:id="@+id/text_class_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14pt"
                android:layout_marginEnd="23pt"
                android:textColor="@color/color_gray_font"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="24pt"
                tool:text="静安寺" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>