<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="98pt">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="32pt"
        android:contentDescription="@string/app"
        tools:src="@mipmap/ic_publish_tutor"/>

    <TextView
        android:id="@+id/txt_info_left"
        style="@style/style_font_default_32pt"
        android:layout_centerVertical="true"
        android:layout_marginStart="20pt"
        android:layout_toEndOf="@id/img_icon"
        tools:text="@string/detailed"/>

    <TextView
        android:id="@+id/txt_default"
        android:layout_width="86pt"
        android:layout_height="42pt"
        android:layout_centerVertical="true"
        android:layout_marginStart="50pt"
        android:layout_toEndOf="@id/txt_info_left"
        android:background="@drawable/draw_bg_mine_layout"
        android:gravity="center"
        android:text="@string/default_way"
        android:textColor="@color/color_nav_gray"
        android:textSize="24pt"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_info_right"
        style="@style/style_font_gray_30pt"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10pt"
        android:layout_toStartOf="@id/img_more"
        tools:text="@string/delete"/>

    <ImageView
        android:id="@+id/img_more"
        android:layout_width="21pt"
        android:layout_height="35pt"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="34pt"
        android:contentDescription="@string/app"
        android:src="@mipmap/ic_more"/>

</RelativeLayout>
