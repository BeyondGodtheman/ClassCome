<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/draw_bg_fillet_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58pt"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="30pt" />

        <TextView
            android:id="@id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37pt"
            android:layout_marginTop="25pt"
            android:layout_marginEnd="37pt"
            android:text="@string/app"
            android:textSize="24pt"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71pt"
        android:orientation="horizontal"
        android:layout_marginStart="36pt"
        android:layout_marginEnd="36pt"
        android:layout_marginTop="39pt"
        android:layout_marginBottom="34pt">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/draw_bg_fillet_blue"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/color_white"
            android:textSize="32pt" />

        <View
            android:layout_width="30pt"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/draw_bg_fillet_blue"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/color_white"
            android:textSize="32pt" />
    </LinearLayout>
</LinearLayout>
