<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/view_bookshelf_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:alwaysDrawnWithCache="false"
        android:background="@color/color_white"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        android:visibility="gone"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_nav"
        android:layout_below="@id/layout_title"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>

    <LinearLayout
        android:id="@+id/ll_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_primary">

        <TextView
            android:id="@+id/txt_home"
            style="@style/Style_Home_Bottom_Navigation"
            android:drawableTop="@drawable/bookshelf_head_cache_icon"
            android:text="@string/nav_home"/>

        <TextView
            android:id="@+id/txt_publish"
            style="@style/Style_Home_Bottom_Navigation"
            android:drawableTop="@drawable/bookshelf_head_more"
            android:text="@string/nav_publish"/>

        <TextView
            android:id="@+id/txt_mine"
            style="@style/Style_Home_Bottom_Navigation"
            android:drawableTop="@drawable/bookshelf_head_search_icon"
            android:text="@string/nav_mine"/>

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:background="@color/color_divider"/>

</RelativeLayout>
